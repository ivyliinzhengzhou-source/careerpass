        function init(){document.getElementById('interests').innerHTML=INTERESTS.map(i=>`<div class="tag" onclick="toggleTag(this, 'interests', '${i}')">${i}</div>`).join('');document.getElementById('skills').innerHTML=SKILLS.map(s=>`<div class="tag" onclick="toggleTag(this, 'skills', '${s}')">${s}</div>`).join('');document.getElementById('mbti').addEventListener('change',checkForm)}
        function toggleTag(el,type,value){el.classList.toggle('selected');if(el.classList.contains('selected')){userData[type].push(value)}else{userData[type]=userData[type].filter(v=>v!==value)}checkForm()}
        function checkForm(){userData.mbti=document.getElementById('mbti').value;const valid=userData.mbti&&userData.interests.length>=3&&userData.skills.length>=3;document.getElementById('analyzeBtn').disabled=!valid}
        async function analyzeCareer(){userData.school=document.getElementById('school').value||'Your University';userData.location=document.getElementById('location').value||'San Francisco, CA';goToStep(2);document.getElementById('careers').innerHTML='<div class="loading"><div class="spinner"></div><p>AI æ­£åœ¨åˆ†æä½ çš„èŒä¸šæ–¹å‘...</p></div>';try{const response=await fetch("https://api.anthropic.com/v1/messages",{method:"POST",headers:{"Content-Type":"application/json"},body:JSON.stringify({model:"claude-sonnet-4-20250514",max_tokens:2000,messages:[{role:"user",content:`ä½ æ˜¯èŒä¸šè§„åˆ’ä¸“å®¶ã€‚åŸºäºåº”å±Šç”Ÿæ¡£æ¡ˆï¼Œæ¨è3ä¸ªæœ‰æ˜æ˜¾åŒºåˆ«çš„èŒä¸šã€‚æ¡£æ¡ˆï¼š- MBTI: ${userData.mbti}- å­¦æ ¡: ${userData.school}- åœ°ç‚¹: ${userData.location}- å…´è¶£: ${userData.interests.join(', ')}- æŠ€èƒ½: ${userData.skills.join(', ')}è¦æ±‚ï¼š1. åªæ¨è3ä¸ªèŒä¸šï¼Œæœ‰æ˜æ˜¾åŒºåˆ«ï¼ˆæŠ€æœ¯å‹ã€åˆ›æ„å‹ã€å•†ä¸šå‹å„ä¸€ä¸ªï¼‰2. é€‚åˆåº”å±Šç”Ÿentry-level 3. è–ªèµ„$50k-$80kæ¯ä¸ªèŒä¸šæä¾›ï¼š- title: èŒä½è‹±æ–‡åï¼ˆå¦‚ "Junior Data Analyst"ï¼‰- subtitle: ä¸€å¥è¯æè¿°(15å­—å†…)- task: å…·ä½“å¹²ä»€ä¹ˆ+è¦è§£å†³ä»€ä¹ˆé—®é¢˜(2-3å¥è¯ï¼Œè¦å…·ä½“ç”ŸåŠ¨)- workWith: å’Œè°ä¸€èµ·å·¥ä½œ- interesting: è¿™ä¸ªå·¥ä½œæœ‰è¶£çš„ç‚¹(1-2å¥è¯)- salary: è–ªèµ„èŒƒå›´è¿”å›JSONæ•°ç»„ï¼Œåªè¿”å›JSONï¼Œä¸è¦å…¶ä»–æ–‡å­—ï¼š[{"title":"...","subtitle":"...","task":"...","workWith":"...","interesting":"...","salary":"..."}]`}]})});const data=await response.json();let careers=[];if(data.content?.[0]){const text=data.content[0].text;const jsonMatch=text.match(/\[[\s\S]*\]/);if(jsonMatch){careers=JSON.parse(jsonMatch[0])}}if(careers.length===0){careers=getFallbackCareers()}displayCareers(careers)}catch(error){console.error('AI åˆ†æé”™è¯¯:',error);displayCareers(getFallbackCareers())}}
        function getFallbackCareers(){return[{title:"Junior Data Analyst",subtitle:"ç”¨æ•°æ®è®²æ•…äº‹çš„ä¾¦æ¢",task:"ä»æ•°æ®ä¸­æ‰¾å‡ºæœ‰ä»·å€¼ä¿¡æ¯ã€‚åˆ†æä¸ºä»€ä¹ˆç”¨æˆ·æµå¤±ç‡ä¸Šå‡ï¼Œå“ªäº›è¥é”€æ¸ é“ROIæœ€é«˜ã€‚å°†æ•°å­—å˜æˆå¯æ‰§è¡Œçš„å•†ä¸šå»ºè®®ã€‚",workWith:"äº§å“ç»ç†ã€å¸‚åœºå›¢é˜Ÿã€ä¸šåŠ¡åˆ†æå¸ˆã€æ•°æ®å·¥ç¨‹å¸ˆ",interesting:"ä½ çš„åˆ†æå¯èƒ½ç›´æ¥æ”¹å˜å…¬å¸æˆ˜ç•¥ï¼æ¯å¤©éƒ½åœ¨è§£è°œï¼Œæ•°æ®ä¸ä¼šè¯´è°ã€‚",salary:"$55k-$75k"},{title:"UX Designer",subtitle:"è®©äº§å“æ›´å¥½ç”¨çš„é­”æ³•å¸ˆ",task:"è®¾è®¡ç›´è§‚çš„äº§å“ç•Œé¢ã€‚è®©å¤æ‚åŠŸèƒ½å˜ç®€å•ï¼Œè®©ç”¨æˆ·è½»æ¾å®Œæˆä»»åŠ¡ã€‚é€šè¿‡ç”¨æˆ·è®¿è°ˆã€åŸå‹æµ‹è¯•ä¸æ–­ä¼˜åŒ–ä½“éªŒã€‚",workWith:"äº§å“ç»ç†ã€å‰ç«¯å·¥ç¨‹å¸ˆã€ç”¨æˆ·ç ”ç©¶å‘˜ã€å…¶ä»–è®¾è®¡å¸ˆ",interesting:"ä½ çš„è®¾è®¡æ¯å¤©å½±å“æˆåƒä¸Šä¸‡ç”¨æˆ·ï¼çœ‹åˆ°è‡ªå·±çš„ä½œå“è¢«ä½¿ç”¨ï¼Œè¶…æœ‰æˆå°±æ„Ÿã€‚",salary:"$60k-$80k"},{title:"Account Manager",subtitle:"å®¢æˆ·æˆåŠŸçš„å®ˆæŠ¤è€…",task:"ç»´æŠ¤å®¢æˆ·å…³ç³»ï¼Œç¡®ä¿ä»–ä»¬ä»äº§å“ä¸­è·å¾—ä»·å€¼ã€‚ä¸»åŠ¨è”ç³»è§£å†³é—®é¢˜ã€æä¾›åŸ¹è®­ã€åˆ†æä½¿ç”¨æ•°æ®ã€ä¿ƒæˆç»­çº¦ã€‚",workWith:"å®¢æˆ·ã€é”€å”®å›¢é˜Ÿã€äº§å“å›¢é˜Ÿã€å®¢æˆ·æˆåŠŸå›¢é˜Ÿ",interesting:"å»ºç«‹çœŸå®çš„äººé™…å…³ç³»ï¼Œå¸®åŠ©ä¼ä¸šæˆåŠŸã€‚ç›´æ¥å½±å“å…¬å¸è¥æ”¶ï¼Œæ™‹å‡è·¯å¾„æ¸…æ™°ã€‚",salary:"$50k-$70k"}]}
        function displayCareers(careers){document.getElementById('careers').innerHTML=careers.map((c,i)=>`<div class="career-card" onclick="selectCareer('${c.title}')"><div class="career-title">${c.title}</div><div class="career-subtitle">${c.subtitle}</div><div class="career-detail" data-icon="ğŸ¯"><div class="detail-label">ä»»åŠ¡ï¼šå¹²ä»€ä¹ˆ + è¦è§£å†³çš„é—®é¢˜</div><div class="detail-text">${c.task}</div></div><div class="career-detail" data-icon="ğŸ‘¥"><div class="detail-label">å’Œè°ä¸€èµ·å·¥ä½œ</div><div class="detail-text">${c.workWith}</div></div><div class="career-detail" data-icon="âœ¨"><div class="detail-label">æœ‰è¶£çš„ç‚¹</div><div class="detail-text">${c.interesting}</div></div><span class="salary">ğŸ’° ${c.salary}/year</span></div>`).join('')}
        function selectCareer(title){document.querySelectorAll('.career-card').forEach(c=>c.classList.remove('selected'));event.currentTarget.classList.add('selected');userData.selectedCareer=title;document.getElementById('findJobsBtn').disabled=false}
        async function findJobs(){if(!userData.selectedCareer){alert('è¯·å…ˆé€‰æ‹©èŒä¸šæ–¹å‘');return}goToStep(3);const jobsDiv=document.getElementById('jobs');jobsDiv.innerHTML='<div class="loading"><div class="spinner"></div><p>ğŸš€ æ­£åœ¨ä» LinkedIn å®æ—¶æŠ“å–èŒä½æ•°æ®...</p><p style="color: var(--text-light); margin-top: 10px; font-size: 0.9rem;">è¿™å¯èƒ½éœ€è¦ 30-90 ç§’ï¼ŒMino AI æ­£åœ¨å·¥ä½œä¸­...</p></div>';try{const response=await fetch('https://careerpass-omega.vercel.app/api/jobs',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({jobTitle:userData.selectedCareer,location:userData.location})});const data=await response.json();if(data.success&&data.jobs&&data.jobs.length>0){const school=userData.school;jobsDiv.innerHTML=`<div style="background: linear-gradient(135deg, rgba(6, 214, 160, 0.1), rgba(0, 184, 148, 0.1));padding: 15px; border-radius: 12px; margin-bottom: 25px; border-left: 4px solid #06D6A0;">âœ… ä» LinkedIn å®æ—¶æŠ“å–åˆ° ${data.count} ä¸ªæœ€æ–°èŒä½ï¼</div><p style="margin-bottom: 25px; color: var(--text-light);">${userData.selectedCareer} Â· ${userData.location} Â· æŠ“å–æ—¶é—´: ${new Date().toLocaleString('zh-CN')}</p>${data.jobs.map(job=>`<div class="job-card"><div class="job-title">${job.title}</div><div class="company-name">${job.company}</div><div class="job-meta"><span>ğŸ“ ${job.location}</span><span>ğŸ’µ ${job.salary}</span><span>ğŸ“… ${job.postedDate||'Recently posted'}</span></div><a href="${job.url}" target="_blank" class="apply-btn">ğŸš€ Apply on LinkedIn</a><div style="margin-top: 20px; padding-top: 20px; border-top: 2px solid rgba(255, 107, 157, 0.1);"><div style="font-weight: 600; margin-bottom: 12px; color: var(--text-dark);">ğŸ’¼ Connect & Learn More</div><a href="https://www.linkedin.com/search/results/people/?keywords=${encodeURIComponent(job.company+' '+school)}" target="_blank" class="linkedin-link">ğŸ“ Find ${school} alumni</a><a href="https://www.linkedin.com/company/${job.company.toLowerCase().re