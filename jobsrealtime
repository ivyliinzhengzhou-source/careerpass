        function goToStep(step){document.querySelectorAll('.section').forEach(s=>s.classList.remove('active'));document.getElementById('step'+step).classList.add('active');document.querySelectorAll('.step').forEach(s=>s.classList.remove('active'));document.querySelector(`.step[data-step="${step}"]`).classList.add('active');window.scrollTo({top:0,behavior:'smooth'})}
        init();
